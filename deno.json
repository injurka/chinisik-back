{
  "license": "MIT",
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --watch src/main.ts",
    "typecheck": "deno check ./src/main.ts",
    "test": "deno test -A",
    "prisma": "deno run -A --unstable npm:prisma",
    "prisma:format": "deno task prisma format",
    "prisma:seed": "deno run -A prisma/seed.ts",
    "prisma:studio": "deno task prisma studio",
    "prisma:generate": "deno run -A --unstable npm:prisma@latest generate --no-engine",
    "prisma:migrate": "deno task prisma migrate dev --skip-seed",
    "prisma:reset": "deno task prisma migrate reset"
  },
  "imports": {
    "~/": "./src/",
    "~/prisma": "./generated/client/deno/edge.ts",
    "prom-client": "npm:prom-client@^15.1.3",
    "@hono/swagger-ui": "npm:@hono/swagger-ui@^0.4.1",
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^0.16.4",
    "@hono/hono": "npm:hono@^4.6.8",
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2",
    "@std/path": "jsr:@std/path@^1.0.6",
    "@prisma/client": "npm:@prisma/client@^5.21.1",
    "prisma": "npm:prisma@^5.21.1"
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "src/"
    ]
  }
}
